@(Html.Kendo().MultiSelect()
                .Name("Enterprises")
                .DataTextField("Text")
                .DataValueField("Value")
                .Filter(FilterType.Contains)
                .Placeholder("Please select")
                .DataSource(source =>
                {
                    source.Read(read =>
                    {
                        read.Action("ReadForSelect", "Enterprise");
                    })
                    .ServerFiltering(false);
                })
)
