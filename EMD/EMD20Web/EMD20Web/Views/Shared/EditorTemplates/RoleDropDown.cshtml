@(
        Html.Kendo().DropDownListFor(m => m)
        .OptionLabel("Please select")
        .Name("Role")
        .DataTextField("Text")
        .DataValueField("Value")
        .HtmlAttributes(new { @style = "width:500px" })
        .Filter(FilterType.Contains)
        .IgnoreCase(true)
        .AutoBind(true)
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("ReadForSelect", "Role");
            })
            .ServerFiltering(false);
        })
)
