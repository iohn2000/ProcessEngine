@model Kapsch.IS.EMD.EMD20Web.Models.OrgUnitRoleModel
@using Kapsch.IS.EMD.EMD20Web.HelperExtensions
@{
    ViewBag.Title = "View Orgunit Employee";
    ViewBag.TooltipUrl = Request.Url.Scheme + "://" + Request.Url.Authority + "/Quickinfo/OrgUnitRole_View.html";
}

@Html.Partial("~/Views/Shared/Javascript/_TooltipMetaData.cshtml")


<div id="formcontent">

        @Html.AntiForgeryToken()

        <div id="formresults" class="infobox error" style="display:none"></div>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="k-edit-form-container" style="float:left;">

                <div class="form-group">
                    @Html.LabelForRequired(model => model.R_Guid, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @(
                        Html.Kendo().DropDownListFor(m => m)
                        .OptionLabel("Please select")
                        .Name("R_Guid")
                        //.DataTextField("Name")
                        //.DataValueField("Guid")
                        .DataTextField("Text")
                        .DataValueField("Value")
                        .HtmlAttributes(new { disabled = "disabled", @style = "width:500px" })
                        .Filter(FilterType.Contains)
                        .IgnoreCase(true)
                        .AutoBind(true)
                        .BindTo(Model.availableRoles)
                        )
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelForRequired(model => model.O_Guid, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @(
                        Html.Kendo().DropDownListFor(m => m)
                        .OptionLabel("Please select")
                        .Name("O_Guid")
                        .DataTextField("Text")
                        .DataValueField("Value")
                        //.DataTextField("Name")
                        //.DataValueField("Guid")
                        .HtmlAttributes(new { disabled = "disabled", @style = "width:500px" })
                        .Filter(FilterType.Contains)
                        .IgnoreCase(true)
                        .AutoBind(true)
                        .BindTo(Model.availableOrgUnits)
                        )
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelForRequired(model => model.EP_Guid, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @(Html.Kendo().ComboBox()
                        .Name("EP_Guid")
                        .DataTextField("Text")
                        .DataValueField("Value")
                        .HtmlAttributes(new { disabled = "disabled", style = "width:100%;" })
                        .Filter("contains")
                        .AutoBind(true)
                        .MinLength(3)
                        //.Value(Model.EP_Guid)
                        //.Text(Model.PERS_Name)
                        .BindTo(Model.availableEmployments)
                        //.DataSource(source =>
                        //{
                        //    source.Read(read =>
                        //    {
                        //        read.Action("GetEmployments", "Employment");
                        //    })
                        //    .ServerFiltering(false);
                        //})
                        )

                        @*@(
                            Html.Kendo().DropDownListFor(m => m)
                            .OptionLabel("Please select")
                            .Name("EP_Guid")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .HtmlAttributes(new { @style = "width:500px" })
                            .Filter(FilterType.Contains)
                            .IgnoreCase(true)
                            .AutoBind(true)
                            .BindTo(Model.availableEmployments)
                            )*@
                    </div>
                </div>

                <div class="form-group form-group-buttons">
                    <label></label>
                    <div class="col-md-10">
                        <button type="button" value="Close" class="k-button" onclick="closeWindow();">Close</button>
                    </div>
                </div>
            </div>
        </div>

</div>
