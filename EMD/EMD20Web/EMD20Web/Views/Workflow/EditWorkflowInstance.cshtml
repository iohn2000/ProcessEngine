@model Kapsch.IS.EMD.EMD20Web.Models.Workflow.WorkflowInstanceModel
@using Kapsch.IS.EMD.EMD20Web.HelperExtensions
@{
    ViewBag.Title = "Edit Workflow instance";
    ViewBag.TooltipUrl = Request.Url.Scheme + "://" + Request.Url.Authority + "/Quickinfo/Workflow_EditWorkflowInstance.html";
}

@Html.Partial("~/Views/Shared/Javascript/_TooltipMetaData.cshtml")

@if (Model.CanManage)
{
    <div id="formcontent">


        @using (Ajax.BeginForm("EditWorkflowInstance", "Workflow", null, new AjaxOptions
        {
            HttpMethod = "Post",
            OnBegin = "formValidation.OnBegin(xhr)",
            OnSuccess = "formValidation.OnSuccess(xhr)",
            OnFailure = "formValidation.OnFailure(xhr)"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.InstanceID);
            @Html.HiddenFor(model => model.DefinitionID);
            @Html.HiddenFor(model => model.Description);




            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group form-group-buttons">
                    <label></label>
                    <div class="col-md-10">

                        @if (Model.Status == Kapsch.IS.ProcessEngine.Shared.Enums.EnumWorkflowInstanceStatus.Error ||
                         Model.Status == Kapsch.IS.ProcessEngine.Shared.Enums.EnumWorkflowInstanceStatus.Sleeping)
                        {
                            <button type="button" value="Cancel" class="k-button" onclick="closeWindow(true);">Cancel</button>
                            <input type="submit" value="Save" class="btn k-button kapsch-text-button" />
                        }
                        else
                        {
                            <button type="button" value="Cancel" class="k-button" onclick="closeWindow(true);">Close</button>
                        }
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelForRequired(model => model.InstanceXML, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.InstanceXML, new { @class = "form-control", data_autoresize = "", @style = "width: 100%; min-height: 400px" })
                        @Html.ValidationMessageFor(model => model.InstanceXML, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        }
    </div>

    <div id="modal-window-activities"></div>


    <script>
    $(function () {
        $("form").kendoValidator();
    });


    $(document).ready(function (e) {
        helper.Functions.AutoResize();
    });
    </script>

}

