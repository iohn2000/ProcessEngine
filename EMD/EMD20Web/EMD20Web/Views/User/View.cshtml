@model Kapsch.IS.EMD.EMD20Web.Models.UserModel
@using Kapsch.IS.EMD.EMD20Web.HelperExtensions
@using Kapsch.IS.EMD.EMD20Web.Models

@{
    ViewBag.Title = "View User";
    ViewBag.TooltipUrl = Request.Url.Scheme + "://" + Request.Url.Authority + "/Quickinfo/User_View.html";
}

@Html.Partial("~/Views/Shared/Javascript/_TooltipMetaData.cshtml")

<div id="formcontent">



        <div id="formresults" class="infobox error" style="display:none"></div>

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="k-edit-form-container" style="float:left;">
                <div class="form-group">
                    @Html.LabelForRequired(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Username, new { disabled = "disabled", @class="k-textbox", htmlAttributes = new {  @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelForRequired(model => model.USDO_UI, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserDomainDisplayName, new { disabled = "disabled", @class = "k-textbox", htmlAttributes = new { @class = "form-control" } })
                    </div>                 
                </div>

                <div class="form-group">
                    @Html.LabelForRequired(model => model.UserType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserTypeDisplayName, new { disabled = "disabled", @class = "k-textbox", htmlAttributes = new { @class = "form-control" } })
                    </div>     
                </div>


                <div class="form-group">
                    @Html.LabelForRequired(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.StatusDisplayName, new { disabled = "disabled", @class = "k-textbox", htmlAttributes = new { @class = "form-control" } })
                    </div>     
                </div>



                <div class="form-group form-group-buttons">
                    <label></label>
                    <div class="col-md-10">
                        <button type="button" value="Close" class="k-button" onclick="closeWindow();">Close</button>
                    </div>
                </div>
            </div>
        </div>
    

</div>


